---
import {Icon} from 'astro-icon';
import ToggleMenu from '~/components/core/ToggleMenu.astro';

const {pathname} = new URL(Astro.request.url);
const currentPath = pathname.slice(1).replace(/\.\w+$/, ''); // Remove the first `/` and file extension.

const activeClass = 'underline underline-offset-[7px] decoration-[3px] decoration-secondary-500';

const linkClass = page => `${page === currentPath ? activeClass : ''} font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out`;
---

<style is:inline>
html {
	scroll-padding-top: 80px; /* The header has 72px height and we add some padding */
}
</style>

<header class="sticky top-0 z-40 flex-none mx-auto w-full bg-white md:bg-white/90 dark:bg-slate-900 dark:md:bg-slate-900/90 md:backdrop-blur-sm border-b dark:border-b-0">
	<div class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4">
		<div class="flex justify-between">
			<a class="flex items-center" href="/">
				<span class="self-center ml-2 text-2xl font-extrabold text-gray-900 whitespace-nowrap dark:text-white">
					{currentPath === ''
						? 'ðŸ¦„' // TODO
						: 'Sindre Sorhus'
					}
				</span>
			</a>
			<div class="flex items-center md:hidden">
				<ToggleMenu/>
			</div>
		</div>
		<nav
			class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200 h-screen md:h-auto"
			aria-label="Main navigation"
			id="menu"
		>
			<ul class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center w-full md:w-auto collapsed text-xl md:text-base">
				<li>
					<a href="/apps" class={linkClass('apps')}>Apps</a>
				</li>
				<!-- <li>
					<a href="/repos" class={linkClass('repos')}>Repos</a>
				</li> -->
				<li>
					<a href="/donate" class={linkClass('donate')}>Donate</a>
				</li>
				<li>
					<a href="/supporters" class={linkClass('supporters')}>Supporters</a>
				</li>
				<li>
					<a href="/about" class={linkClass('about')}>About</a>
				</li>
				<li class="md:hidden">
					<a href="/contact" class={linkClass('contact')}>Contact</a>
				</li>
				<li>
					<a href="https://medium.com/sindre-sorhus" class={linkClass('blog')}>Blog â€º</a>
				</li>
				<!-- <li>
					<a
						class="font-medium hover:text-gray-900 dark:hover:text-white px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getBlogPermalink()}>Blog</a
					>
				</li> -->
				<li class="md:hidden">
					<a href="https://github.com/sindresorhus" class={linkClass('github')}>GitHub</a>
				</li>
			</ul>
			<div class="md:self-center flex items-center mb-4 md:mb-0 ml-2">
				<div class="hidden items-center md:flex">
					<!-- <a
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
						aria-label="RSS Feed"
						href="/rss.xml"
					>
						<Icon name="tabler:rss" class="w-5 h-5" />
					</a> -->
					<a
						href="/contact"
						aria-label="Contact"
						class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
					>
						<Icon name="tabler:mail" class="w-5 h-5"/>
					</a>
					<a
						href="https://github.com/sindresorhus"
						aria-label="Sindre Sorhus's Github profile"
						class="inline-block text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
					>
						<Icon name="tabler:brand-github" class="w-5 h-5"/>
					</a>
				</div>
			</div>
		</nav>
	</div>
</header>
